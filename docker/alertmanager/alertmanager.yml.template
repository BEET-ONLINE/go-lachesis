global:
  resolve_timeout: 5m
  smtp_smarthost: '${SMTP_HOST}'
  smtp_from: '${SMTP_FROM}'
  smtp_auth_username: '${SMTP_AUTH_USER}'
  smtp_auth_password: '${SMTP_AUTH_PASS}'
route:
  group_by: ['alertname']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 1h
  receiver: 'admin-alerts'

  routes:
  - match:
      job: prometheus
    receiver: 'admin-alerts'
    repeat_interval: 1h

receivers:
- name: 'admin-alerts'
  email_configs:
  - to: '${EMAIL_ADMIN}'
